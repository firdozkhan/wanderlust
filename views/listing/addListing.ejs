<% layout("layouts/boilerplate.ejs")%>
<div class="col-8 offset-2">
    <br>
    <br>
    <h3>Enter the Listing details</h3>
    <form method="post" action="/listing/new">
        
        <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input name="listing[title]" placeholder="Enter titile" type="text" class="form-control">
        </div>
        <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea name="listing[description]" placeholder="Enter description" class="form-control"></textarea>
        </div>
        
        <div class="mb-3">
            <label for="image" class="form-label">Image Link</label>
            <input name="listing[image[url]]" placeholder="Enter image URL/Link" class="form-control" type="text">
        </div>
        <div class="row">
            <div class="mb-3 col-md-4">
                <label for="price" class="form-label">Price</label>
                <input name="listing[price]" placeholder="Enter Price" class="form-control" type="number">
            </div>
            <div class="mb-3 col-md-8">
                <label for="country" class="form-label">Country</label>
                <input name="listing[country]" placeholder="Enter country" class="form-control" type="text">
            </div>
        </div>
        
        <div class="mb-3">
            <label for="location" class="form-label">Location</label>
            <input name="listing[location]" placeholder="Enter location" class="form-control" type="text">
        </div>
       <br>
        <br>
        <button class="btn add-btn">Add</button>
        <br><br><br>
    </form>
</div>

