<% layout("layouts/boilerplate.ejs")%>
<div class="col-8 offset-3 mt-3">
    <h3>Details about Destination</h3>
</div>

    <div class="card col-6 offset-3" >
        <img src="<%=listing.image.url%>" class="card-img-top img-listing-detail" alt="listing image">
        <div class="card-body">
          <p class="card-text">
            <b><%=listing.title%></b><br><br>
            <%=listing.description%><br><br>
            Price: &#8377; <%=listing.price.toLocaleString("en-IN")%><br>
            Location: <%=listing.location%><br>
            Country: <%=listing.country%>
         </p>
        </div>
    </div>
      <div class="btns offset-3">
        <form action="/listing/<%=listing._id%>/edit">
            <button class="btn edit-btn">Edit</button>
            &nbsp;
        </form>
        <form method="post" action="/listing/<%=listing._id%>/delete?_method=delete">
            <button class="btn btn-dark delete-btn">Delete</button>
        </form>
      </div>
    
</body>
