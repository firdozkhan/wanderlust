<% layout("layouts/boilerplate.ejs")%>
<div class="col-8 offset-2">
    <br>
    <br>
    <h3>Make your changes</h3>
    <form method="post" action="/listing/<%=listing._id%>?_method=put">
        <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input name="listing[title]" placeholder="Enter titile" value="<%=listing.title%>" class="form-control" type="text">
        </div>
        <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea name="listing[description]" placeholder="Enter description" class="form-control"><%=listing.description%></textarea>
        </div>
        
        <div class="mb-3">
            <label for="image" class="form-label">Image Link</label>
            <input name="listing[image.url]" placeholder="Enter image URL/Link" class="form-control" value="<%=listing.image.url%>" class="form-control" type="text">
        </div>
        <div class="row">
            <div class="mb-3 col-md-4">
                <label for="price" class="form-label">Price</label>
                <input name="listing[price]" placeholder="Enter price" value="<%=listing.price%>" class="form-control" type="number">
            </div>
            <div class="mb-3 col-md-8">
                <label for="country" class="form-label">Country</label>
                <input name="listing[country]" placeholder="Enter country" class="form-control" value="<%=listing.country%>" type="text">

            </div>
        </div>
        
        <div class="mb-3">
            <label for="location" class="form-label">Location</label>        
            <input name="listing[location]" placeholder="Enter location" class="form-control" value="<%=listing.location%>" type="text">
        </div>
        <br><br>
        <button class="btn edit-btn">submit</button>
    </form>
</div>